.page-signIn
    background: #fff
    height: 100%
    position: relative

    .signIn-nav
        text-align: center
        line-height: 50px
        height: 52px
        width: 100%
        position: absolute
        top: 0
        left: 0
        box-sizing: border-box
        padding: 0 20px
        border-bottom: 2px solid #2e658e

        .navIcon
            position: absolute
            font-size: 20px
            z-index: 2
            top: 0
            height: 100%
            color: #999
            width: 20px
            cursor: pointer
            &.el-icon-arrow-left
                left: 0
            &.el-icon-arrow-right
                right: 0
            &.swiper-button-disabled
                color: #bbbbbb
                cursor: not-allowed
            &:before
                position: absolute
                top: 50%
                transform: translate(-50%, -50%)                

        .item
            height: 50px
            background: #e4e0e0
            cursor: pointer
            &.active, &:hover
                background: #2e658e
                color: #fff

    .content
        height: 100%
        padding: 50px 0 0
        box-sizing: border-box
        display: none
        &.active
            display: block
            .home
                width: 100%
                height: 100%
                .content-left
                    float: left
                    width: 50%
                    height: 100%
                    div
                        width: 130px
                        height: 50px
                        display: inline-block
                        line-height: 50px
                        text-align: center
                        font-size: 20px
                    div:hover
                        background: #d6cfcf    
                    a
                        display: inline-block
                        text-align: center
                        line-height: 50px
                    a:hover
                        background: #c4add6
                .content-right
                    float: left  
                    width: 50%  
                    height: 100%

    .el-dialog--tiny
        .el-dialog__body
            .pop-p
                span 
                    display: inline-block
                    width: 17%
                .el-input
                    display: inline-block
                    width: 70%;
