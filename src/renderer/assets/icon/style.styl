@import "variables"

@font-face
  font-family 'icomoon'
  src url(icomoon-font-path + '/icomoon.eot?g6804f')
  src url(icomoon-font-path + '/icomoon.eot?g6804f#iefix') format('embedded-opentype'), url(icomoon-font-path + '/icomoon.ttf?g6804f') format('truetype'), url(icomoon-font-path + '/icomoon.woff?g6804f') format('woff'), url(icomoon-font-path + '/icomoon.svg?g6804f#icomoon') format('svg')
  font-weight normal
  font-style normal

[class^="icon-"], [class*=" icon-"]
  font-family 'icomoon' !important
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1

  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.icon-weibo
  &:before
    content icon-weibo
.icon-weixin
  &:before
    content icon-weixin
.icon-tengxunqq
  &:before
    content icon-tengxunqq

